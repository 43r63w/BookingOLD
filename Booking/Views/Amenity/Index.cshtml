﻿
<div class="card shadow border-0 my-5 m-5 pb-5">
    <div class="card-header bg-success  ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Amenity in Villas</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Amenity" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Add new Amenity
                </a>
            </div>
        </div>

        <table id="amenityTable" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Amenity Name</th>
                    <th>Description</th>
                    <th>Villa Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>

    </div>
</div>


@section Scripts{
    <script src="~/js/amenity.js"></script>
}                