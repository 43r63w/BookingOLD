@using Booking.Application.Services


@{
    var status = Context.Request.Query["status"];

    var pending = "";
    var approved = "";
    var checkedIn = "";
    var completed = "";
    var cancelled = "";
    var all = "";

    switch (status)
    {
        case SD.StatusPending:
            pending = "text-white bg-success";
            break;
        case SD.StatusApproved:
            approved = "text-white bg-success";
            break;
        case SD.StatusCheckedIn:
            checkedIn = "text-white bg-success";
            break;
        case SD.StatusCompleted:
            completed = "text-white bg-success";
            break;
        case SD.StatusCancelled:
            cancelled = "text-white bg-success";
            break;
        case SD.All:
            all = "text-white bg-success";
            break;
        default:

            break;
    }

}

﻿
<div class="w-100 card shadow border-0 my-5 m-5 pb-5">
    <div class="card-header bg-success  ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                @if (User.IsInRole(SD.Role_Admin))
                {
                    <h2 class="text-white py-2">
                        Bookings
                    </h2>
                }
                else
                {
                    <h2 class="text-white py-2">
                        Yours Bookings
                    </h2>
                }

            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="d-flex justify-content-end pb-4 pt-2">
            <ul class=" list-group list-group-horizontal-sm">
                <a style="text-decoration:none;" asp-controller="BookingVilla" asp-action="Index" asp-route-status="@SD.StatusPending">
                <li class="list-group-item @pending">@SD.StatusPending</li>
                </a>
                <a style="text-decoration:none;" asp-controller="BookingVilla" asp-action="Index" asp-route-status="@SD.StatusApproved">
                <li class="list-group-item @approved">@SD.StatusApproved</li>
                </a>
                <a style="text-decoration:none;" asp-controller="BookingVilla" asp-action="Index" asp-route-status="@SD.StatusCompleted">
                <li class="list-group-item @completed">@SD.StatusCompleted</li>
                </a>
                <a style="text-decoration:none;" asp-controller="BookingVilla" asp-action="Index" asp-route-status="@SD.StatusCancelled">
                <li class="list-group-item @cancelled">@SD.StatusCancelled</li>
                </a>
                <a style="text-decoration:none;" asp-controller="BookingVilla" asp-action="Index" asp-route-status="@SD.StatusCheckedIn">
                <li class="list-group-item @checkedIn">@SD.StatusCheckedIn</li>
                </a>
                <a style="text-decoration:none;" asp-controller="BookingVilla" asp-action="Index" asp-route-status="@SD.All">
                <li class="list-group-item @all">@SD.All</li>
                </a>
            </ul>
        </div>

        <table id="bookingTable" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Name</th>
                    <th>Villa name</th>
                    <th>Nights</th>
                    <th>Check in Date</th>
                    <th>Check out Date</th>
                    <th>Status</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>

    </div>
</div>



@section Scripts {
    <script src="~/js/bookingVilla1.js"></script>
}